
@{
    Layout = "_Layout";
}

@using PierreTreats.Models;
@model List<PierreTreats.Models.Flavor>;

<h1>Category</h1>

@if (@Model.Count == 0)
{
    <h3>No categories have been added yet!</h3>
}

@foreach (Flavor flavor in Model)
{
    <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId})</li>
}

<p>@Html.ActionLink("Add new flavor", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>


