@{
  Layout = "_Layout";
}
@using PierreTreats.Models;
@model PierreTreats.Models.Flavor;

<h2>Category Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if(@Model.FlavorTreats.Count == 0)
{
  <p>This category does not contain any items</p>
}
else
{
  <h4>Items the category contains:</h4>
  <ul>
  @foreach(var join in Model.FlavorTreats)
  {
    <li>@join.Treat.Name</li>
  }
  </ul>
}

<p>@Html.ActionLink("Back to categories", "Index")</p>
<p>@Html.ActionLink("Edit Category", "Edit", new { id = Model.FlavorId })</p>
<p>@Html.ActionLink("Delete Category", "Delete", new { id = Model.FlavorId })</p>